{
  "env": {
    "node": true,
    "es2022": true,
    "jest": true,
    "browser": false,
    "serviceworker": false,
    "jquery": false
  },
  "extends": [ "eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn", // Advertir sobre variables no usadas
    "prefer-const": "error", // Preferir const cuando sea posible
    "no-var": "error"   // Prohibir var (solo let/const)
  },
   "ignorePatterns": [
    "node_modules/",
    "dist/"
  ]
}