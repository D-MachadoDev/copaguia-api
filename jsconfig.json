{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2022",
    "moduleResolution": "node",
    "checkJs": false, // NO VALIDAR TIPOS DE DATOS COMO TYPESCRIPT
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "logs"]
}